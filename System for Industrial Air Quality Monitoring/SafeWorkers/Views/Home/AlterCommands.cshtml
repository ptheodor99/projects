@{
    ViewData["Title"] = "Alter Commands";
}


<p><b>Comenzile actuale sunt:</b></p>
<ul>
    @if(ViewBag.CommandsObject.Red == "OFF")
    {
        <li>LED Rosu: Oprit</li>
    }
    else
    {
        <li>LED Rosu: Pornit pentru @ViewBag.CommandsTimeObject.Red secunde</li>
    }

    @if(ViewBag.CommandsObject.Yellow == "OFF")
    {
        <li>LED Galben: Oprit</li>
    }
    else
    {
        <li>LED Galben: Pornit pentru @ViewBag.CommandsTimeObject.Yellow secunde</li>
    }

    @if(ViewBag.CommandsObject.Green == "OFF")
    {
        <li>LED Verde: Oprit</li>
    }
    else
    {
        <li>LED Verde: Pornit pentru @ViewBag.CommandsTimeObject.Green secunde</li>
    }

