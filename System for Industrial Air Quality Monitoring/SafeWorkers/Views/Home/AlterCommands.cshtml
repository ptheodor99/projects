<br />

<form method="post">
    <fieldset>
        <label>Selecteaza dispozitivul:</label>
        <br />
        <select name = "Apps">
            <optgroup label="Dispozitiv">
                <option value="Red">Rosu</option>
                <option value="Yellow">Galben</option>
                <option value="Green">Verde</option>
                <option value="Buzzer">Buzzer</option>
                <option value="Alarm">Alarm</option>
            </optgroup>
        </select>
        <br />
        <label>Selecteaza comanda:</label>
        <br />
        <select name="Command">
            <optgroup label="Comanda">
                <option value="ON">Pornit</option>
                <option value="Test">Testeaza</option>
                <option value="None">Reincarca</option>
            </optgroup>
        </select>
        <br />
        <label>Introdu timpul daca ai ales Pornit</label>
        <br />
        <input type="text" name="Time" style="width:80px;" />
        <br />
        <input type="submit" value="Modifica" />
    </fieldset>
</form>

